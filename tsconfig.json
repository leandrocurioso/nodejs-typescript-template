{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "isolatedModules": false,      
      "lib": [ 
        "es6", 
        "dom" 
      ],
      "types": [
        "reflect-metadata",
        "node",
        "mocha",
        "chai",
        "sinon"
      ],
      "typeRoots": [
        "node_modules/@types",
        "node_modules/@types/mocha",
        "node_modules/@types/chai",
        "node_modules/@types/sinon",      
        "node_modules/@types/restify",   
        "src/lib/typings/nodejs.d"
      ]
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  